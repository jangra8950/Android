    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/otp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/rounded"
        android:cursorVisible="true"
        android:digits="0123456789"
        android:hint="@string/o"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:maxLength="1"
        android:padding="20dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/etResend"
        app:layout_constraintEnd_toStartOf="@id/otp2"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtext" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/otp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:background="@drawable/rounded"
        android:cursorVisible="true"
        android:digits="0123456789"
        android:hint="@string/o"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:maxLength="1"
        android:padding="20dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/etResend"
        app:layout_constraintStart_toEndOf="@id/otp1"
        app:layout_constraintTop_toBottomOf="@id/edtext" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/otp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:background="@drawable/rounded"
        android:cursorVisible="true"
        android:digits="0123456789"
        android:hint="@string/o"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:maxLength="1"
        android:padding="20dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/etResend"
        app:layout_constraintStart_toEndOf="@id/otp2"
        app:layout_constraintTop_toBottomOf="@id/edtext" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/otp4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="@drawable/rounded"
        android:cursorVisible="true"
        android:digits="0123456789"
        android:hint="@string/o"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:maxLength="1"
        android:padding="20dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/etResend"
        app:layout_constraintStart_toEndOf="@id/otp3"
        app:layout_constraintTop_toBottomOf="@id/edtext" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/otp5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="@drawable/rounded"
        android:cursorVisible="true"
        android:digits="0123456789"
        android:hint="@string/o"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:maxLength="1"
        android:padding="20dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/etResend"
        app:layout_constraintStart_toEndOf="@id/otp4"
        app:layout_constraintTop_toBottomOf="@id/edtext" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/otp6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded"
        android:cursorVisible="true"
        android:digits="0123456789"
        android:hint="@string/o"
        android:imeOptions="actionDone"
        android:inputType="phone"
        android:maxLength="1"
        android:padding="21dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/etResend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/otp5"
        app:layout_constraintTop_toBottomOf="@id/edtext" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/etResend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/resend"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/otp1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/button"
        android:fontFamily="@font/open_sans_light"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etResend" />

</androidx.constraintlayout.widget.ConstraintLayout>