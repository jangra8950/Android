<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/etHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/open_sans_light"
        android:padding="12dp"
        android:text="@string/otp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/edtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/open_sans_light"
        android:padding="8dp"
        android:textAlignment="center"
        android:textColor="@color/eye"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etHead" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/otp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/rounded"
        android:cursorVisible="true"
        android:digits="0123456789"
        android:hint="@string/o"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:maxLength="1"
        android:padding="24dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btn"
        app:layout_constraintEnd_toStartOf="@+id/otp2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etHead" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/otp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/rounded"
        android:cursorVisible="true"
        android:digits="0123456789"
        android:hint="@string/o"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:maxLength="1"
        android:padding="24dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btn"
        app:layout_constraintEnd_toStartOf="@+id/otp3"
        app:layout_constraintStart_toEndOf="@+id/otp1"
        app:layout_constraintTop_toBottomOf="@+id/etHead" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/otp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/rounded"
        android:cursorVisible="true"
        android:digits="0123456789"
        android:hint="@string/o"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:maxLength="1"
        android:padding="24dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btn"
        app:layout_constraintEnd_toStartOf="@+id/otp4"
        app:layout_constraintStart_toEndOf="@+id/otp2"
        app:layout_constraintTop_toBottomOf="@+id/etHead" />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/otp4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded"
        android:cursorVisible="true"
        android:digits="0123456789"
        android:hint="@string/o"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:maxLength="1"
        android:padding="24dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/otp3"
        app:layout_constraintTop_toBottomOf="@+id/etHead" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/logbutton"
        android:fontFamily="@font/open_sans_light"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/verify"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/otp1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:padding="8dp"
        android:text="@string/resend"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn" />


</androidx.constraintlayout.widget.ConstraintLayout>